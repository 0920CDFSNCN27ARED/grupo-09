          <% for(i=0; i <5; i++){ %> <%- include("partials/productCard",
          {product:products[i]}) %> <% } %>
        </div>
      </section>
      <section class="margin-top30 gray side-bars">
        <h2 class="text-center black-font padding20">Ofertas</h2>
