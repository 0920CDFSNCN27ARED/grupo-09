<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head", {title: "Crear producto", styles:
    "/css/forms.css"}); %>
  </head>
  <body>
    <%- include("../partials/header") %>

    <main>
      <form
        action="/products"
        method="POST"
        class="form-container"
        enctype="multipart/form-data"
      >
        <label for="name">Nombre del Producto:</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Ej: Cartas Magic"
          class="input"
          required
        />
        <label for="description">Descripcion:</label>
        <textarea
          id="description"
          name="description"
          placeholder="Ej: Mazo de 50 cartas Magic..."
          class="input"
          cols="30"
          rows="10"
          required
        ></textarea>
        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" class="input" required />

        <label for="image">Imagen:</label>
        <input type="file" id="image" name="image" class="padding20" required />

        <label for="category">Categoria:</label>
        <select id="category" name="category" class="input" required>
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>"><%= category.name %></option>
          <% })%>
        </select>

        <button type="submit" class="form-button red">Guardar Producto</button>
      </form>
    </main>
  </body>
</html>
